        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Stretch="UniformToFill" HorizontalAlignment="Center" Grid.RowSpan="3" Source="{Binding User.Photo, Converter={StaticResource ProfileSmallPhotoConverter}, ConverterParameter='blur'}"/>
        <Image x:Name="BigPhoto" Stretch="UniformToFill" HorizontalAlignment="Center" Grid.RowSpan="3" Source="{Binding User.Photo, Converter={StaticResource ProfileBigPhotoConverter}}"/>
        <Border x:Name="PhotoBorder" Grid.RowSpan="3" Background="#99000000" IsHitTestVisible="False" CacheMode="BitmapCache" Opacity="0"/>

        <StackPanel x:Name="CaptionPanel" Margin="18,50" VerticalAlignment="Top" Background="Transparent">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="Title" Text="{Binding Resources.AppName, Converter={StaticResource Uppercase}, Source={StaticResource Strings}}" FontSize="20"/>
                
                <calls:SignalBarsControl Signal="{Binding Signal}">
                    <calls:SignalBarsControl.RenderTransform>
                        <CompositeTransform ScaleY="0.7" ScaleX="0.7" TranslateX="0" TranslateY="2"/>
                    </calls:SignalBarsControl.RenderTransform>
                </calls:SignalBarsControl>
            </StackPanel>
            <TextBlock x:Name="Name" Text="{Binding User.FullName2}" FontSize="36"/>
            <TextBlock x:Name="Status" Text="{Binding Status}" Margin="0,3"/>
        </StackPanel>

        <StackPanel x:Name="EmojisPanel" Tap="EmojisPanel_OnTap" Margin="18,50,18,50" Background="Transparent" RenderTransformOrigin="0.5,0.5" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" CacheMode="BitmapCache">
            <StackPanel.RenderTransform>
                <CompositeTransform x:Name="EmojisTransform"/>
            </StackPanel.RenderTransform>
            <emojiPanel:TelegramRichTextBox Margin="-12,0" emojiPanel:BrowserNavigationService.SuppressParsing="True" Text="{Binding Emojis}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ChatButton" Style="{StaticResource ButtonStyle1}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="/Images/W10M/ic_call_chat_2x.png" Width="26" Height="28"/>
                    <TextBlock Text="{Binding Resources.Chat, Source={StaticResource Strings}}" Margin="0,6,0,0"/>
                </StackPanel>
            </Button>
            <ToggleButton x:Name="SpeakerButton" Checked="Speaker_OnChecked" Unchecked="Speaker_OnUnchecked" Style="{StaticResource ToggleButtonStyle1}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="/Images/W10M/ic_call_speaker_2x.png" Width="26" Height="28"/>
                    <TextBlock Text="{Binding Resources.Speaker, Source={StaticResource Strings}}" Margin="0,6,0,0"/>
                </StackPanel>
            </ToggleButton>
            <ToggleButton x:Name="MuteButton" Checked="Mute_OnChecked" Unchecked="Mute_OnUnchecked" Style="{StaticResource ToggleButtonStyle1}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="/Images/W10M/ic_call_mute_2x.png" Width="26" Height="28"/>
                    <TextBlock Text="{Binding Resources.Mute, Source={StaticResource Strings}}" Margin="0,6,0,0"/>
                </StackPanel>
            </ToggleButton>
            <Button x:Name="IgnoreButton" Visibility="Visible" Style="{StaticResource ButtonStyle1}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="/Images/W10M/ic_call_ignore_2x.png" Width="26" Height="28"/>
                    <TextBlock x:Name="IgnoreButtonLabel" Text="{Binding Resources.Ignore, Source={StaticResource Strings}}" Margin="0,6,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <TextBlock 
            x:Name="EmojiKeyLabel"
