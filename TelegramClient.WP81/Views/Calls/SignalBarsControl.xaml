<UserControl x:Class="TelegramClient.Views.Calls.SignalBarsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="30" d:DesignWidth="30">

    <Grid>
        <Border x:Name="Bar1" Opacity="0.5" Margin="6,0,0,0"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="5" Height="5"  Background="{StaticResource PhoneForegroundBrush}"/>
        <Border x:Name="Bar2" Opacity="0.5" Margin="12,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="5" Height="10" Background="{StaticResource PhoneForegroundBrush}"/>
        <Border x:Name="Bar3" Opacity="0.5" Margin="18,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="5" Height="15" Background="{StaticResource PhoneForegroundBrush}"/>
        <Border x:Name="Bar4" Opacity="0.5" Margin="24,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="5" Height="20" Background="{StaticResource PhoneForegroundBrush}"/>
    </Grid>
</UserControl>