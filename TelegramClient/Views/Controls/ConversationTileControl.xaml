<UserControl x:Class="TelegramClient.Views.ConversationTileControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="Root">
        <Grid x:Name="TileGrid" Grid.Column="1" Grid.Row="0">
            <Ellipse x:Name="Ellipse" Height="62" Width="62" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock x:Name="Label" FontSize="27" FontFamily="Segoe WP Bold" Margin="0,-2,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
            <Image x:Name="Image" Visibility="Collapsed" Height="62" Width="62">
                <Image.Clip>
                    <EllipseGeometry x:Name="ImageClipGeometry" Center="31,31" RadiusX="31" RadiusY="31"/>
                </Image.Clip>
            </Image>
        </Grid>
    </Grid>
</UserControl>
